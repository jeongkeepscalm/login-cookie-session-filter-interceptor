<?xml version="1.0" encoding="UTF-8"?>
<configuration>

<!-- 변수 관리 -->

    <!-- 로그 파일 관리 -->
    <property name="LOG_PATH" value="logs"/>
    <property name="LOG_FILE_NAME_PATTERN" value="test_%d{yyyy-MM-dd_HH-mm}.log"/>
    <property name="MAX_HISTORY" value="30"/>
    <!-- 콘솔 로그 패턴 -->
    <property name="CONSOLE_LOG_PATTERN"
              value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] %clr(%-5level) %clr(${PID:-}){magenta} %clr([%20thread]){faint} %clr(%-36logger{36}){cyan} ::   %msg%n"/>

<!-- 로그 설정 -->

    <!-- 파일 로그 패턴 -->
    <property name="FILE_LOG_PATTERN"
              value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] %-5level ${PID:-} [%20thread] %-36logger{36} ::   %msg%n"/>

    <!-- 로그 패턴에 색상 적용 %clr(pattern){color} -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter" />

    <!-- 콘솔 로그 설정 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 파일 로그 설정 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <!-- fileNamePattern 을 활용하여 일별/분별로 로그 파일을 떨군다. -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${LOG_FILE_NAME_PATTERN}</fileNamePattern>
            <maxHistory>${MAX_HISTORY}</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>

    </appender>

    <!-- 루트 로그 레벨 설정(appender-ref 태그에 참조된 로그만 보인다.) -->
    <root level="info">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
